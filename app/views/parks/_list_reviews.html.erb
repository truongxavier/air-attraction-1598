<% @park.rentals.each do |rental| %>
  <% rental.park_reviews.each do |review| %>
    <div>
      <div class="border-bottom border-gray pb-3 lh-1">
        <div class='d-flex'>
          <%= cl_image_tag rental.user.photo.key, transformation: [ { gravity: "face", crop: "thumb", width: 150, height: 150 }], class: "avatar-bordered dropdown-toggle m-2", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="rating m-2"><%= render_stars(review.rating) %></div>
          <p class="m-2"><i> post√© il y a <%= time_ago_in_words(review.created_at) %></i> </p>
        </div>
        <div class="m-2"><%= review.comment %></div>
      </div>
    </div>
  <% end %>
<% end %>
