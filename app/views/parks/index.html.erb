<h1>Look Out On All The Fantastical Theme Parks, We Have Around The World!!!!</h1>
<div class="d-flex justify-content-between">
  <div class="cards">
    <% @parks.each do |park| %>
      <div class="card-park">
        <%= cl_image_tag(park.park_photos[0].key, class:"imgpark") %>
        <div class="card-park-infos">
          <div>
            <h2><%= link_to park.name, park_path(park) %></h2>
            <p><%= park.location %></p>
          </div>
          <h2 class="card-park-pricing"><%= park.price %>$</h2>
            <%= cl_image_tag park.user.photo.key, class:'card-park-user avatar-bordered' %>
        </div>
      </div>
    <% end %>
  </div>
  <div style="width: 100%; height: 100vh;" class='mx-3'
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
