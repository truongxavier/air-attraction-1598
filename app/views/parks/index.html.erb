<h1>Look Out On All The Fantastical Theme Parks, We Have Around The World!!!!</h1>
<div class="d-flex justify-content-between">
  <div >
      <div class="row justify-content-center">
        <div class="col-sm-8 my-3">
          <%= form_with url: parks_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Type a keyword"
              %>
            <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <div class="cards">
      <% @parks.each do |park| %>
        <%= link_to park_path(park) do %>
          <div class="card-park">
            <%= cl_image_tag(park.park_photos[0].key, class:"imgpark") %>
            <div class="card-park-infos">
              <div>
                <h2><%= park.name %></h2>
                <p><%= park.location %></p>
              </div>
              <h2 class="card-park-pricing"><%= park.price %>$</h2>
                <%= cl_image_tag park.user.photo.key, class:'card-park-user avatar-bordered' %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div style="width: 100%; height: 100vh;" class='mx-3'
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
