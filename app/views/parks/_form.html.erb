<%= simple_form_for @park do |f| %>
  <%= f.input :name, label: "nom" %>
  <%= f.input :location, label: "localisation" %>
  <%= f.input :park_description, label: "Description du parc" %>
  <%= f.input :chambers_description, label: "Description des chambres" %>
  <%= f.input :restaurants_description, label: "Description des restaurants" %>
  <%= f.input :price, label: "Prix" %>
  <%= f.input :park_photos, as: :file, input_html: {multiple: true}, label: "Photos du parc" %>
  <%= f.input :chambers_photos, as: :file, input_html: {multiple: true}, label: "Photos des chambres" %>
  <%= f.input :restaurants_photos, as: :file, input_html: {multiple: true}, label: "Photos des restaurants" %>
  <%= f.submit "Ajouter Parc", class:"btn btn-primary"  %>
<% end %>
