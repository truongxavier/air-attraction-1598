<div class="d-flex image-presenting">
  <div class="col-6">
    <%= cl_image_tag(@park.park_photos[0].key, style: 'width: 100%; height: 100%; border-top-left-radius: 10px; border-bottom-left-radius: 10px;') %>
  </div>
  <div class="col-3">
    <div class=""><%= cl_image_tag(@park.park_photos[1].key, style: 'width: 100%; height: 300px; padding-left: 6px; padding-bottom: 3px;') %></div>
    <div class=""><%= cl_image_tag(@park.park_photos[2].key, style: 'width: 100%; height: 300px; padding-left: 6px; padding-top: 3px;') %></div>
  </div>
  <div class="col-3">
    <div class=""><%= cl_image_tag(@park.park_photos[3].key, style: 'width: 100%; height: 300px; border-top-right-radius: 10px; padding-left: 6px; padding-bottom: 3px;') %></div>
    <div class=""><%= cl_image_tag(@park.chambers_photos[0].key, style: 'width: 100%; height: 300px; border-bottom-right-radius: 10px; padding-left: 6px; padding-top: 3px;') %></div>
  </div>
</div>
